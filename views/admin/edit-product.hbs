<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="productName">Name</label>
                        <input type="text" id="productName" name="Name" class="form-control colorful-input" value="{{product.Name}}">
                    </div>

                    <div class="form-group">
                        <label for="category">Category</label>
                        <input type="text" id="category" name="Category" class="form-control colorful-input" value="{{product.Category}}">
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" id="price" name="Price" class="form-control colorful-input" step="0.01" value="{{product.Price}}">
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="Description" class="form-control colorful-input" rows="4">{{product.Description}}</textarea>
                    </div>

                    <div class="form-group">
                        <label for="image">Image</label>
                        <img src="/product-images/{{product._id}}.jpg" class="pt-3" style="width: 100px; height: auto" alt="Image not available" id="imgView">
                        <input type="file" class="form-control-file colorful-input" name="Image" onchange="viewImage(event)">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg colorful-button mt-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
    }
</script>
<style>
    .colorful-input {
    background-color: #f5f5f5; /* Background color */
    border: 1px solid #3498db; /* Border color */
    border-radius: 5px; /* Rounded corners */
    padding: 8px; /* Padding inside the input */
    color: #333; /* Text color */
}
.colorful-button {
    background-color: #3498db; /* Button background color */
    color: #fff; /* Button text color */
    border: none; /* Remove button border */
    padding: 10px 20px; /* Padding inside the button */
    border-radius: 5px; /* Rounded corners */
    cursor: pointer; /* Add a pointer cursor on hover */
}

.colorful-button:hover {
    background-color: #2980b9; /* Button background color on hover */
}


</style>